<%= form_with url: login_path, scope: :user do |form| %>
  <div>
    <%= form.label :email, class: 'form-label' %>
    <%= form.email_field :email, required: true, autofocus: true, class: 'form-control' %>
  </div>
  <div>
    <%= form.label :password, class: 'form-label' %>
    <%= form.password_field :password, required: true, class: 'form-control' %>
  </div>
  <%= form.submit "Sign In", class: 'btn-forms' %>
  <div class="password-reset">
    <%= link_to "Forgot your password?", new_password_path %>
  </div>
  <%= link_to "Back to Home", root_path, class: 'back-home' %>
<% end %>