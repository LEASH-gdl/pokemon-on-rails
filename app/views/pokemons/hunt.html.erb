<%= stylesheet_link_tag 'style.css' %>

<body>
	<h1>You have found a Pokemon!</h1>
	<%= button_to @berries.to_s + " 🫐", berries_path, method: :get, class: "berries-button" %>

	<h2 class="h2-hunt"><%= @randomPokemon.name.capitalize %></h2>
	<img src=<%=@randomPokemon.sprites.front_default%> alt="No image available", class="pokemon-image">

	<h3 class="types-header">Types</h3>
	<ul>
		<% @types.each do |type| %>
			<li class="types-list">
				<%= type.capitalize %>
			</li>
		<% end %>
	</ul>
	
	<%= button_to "Catch ( 15🫐 )",
		capture_path,
		:disabled => !@can_catch,
		method: :put,
		params: [
			name: @randomPokemon.name,
			api_id: @randomPokemon.id,
			image: @randomPokemon.sprites.front_default,
			types: @types
		], class: "catch-button" %>

	<button class="home-button" onclick="window.location.href='/main';">Maybe later...</button>
</body>
